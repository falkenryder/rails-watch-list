
<div class="container">
 <nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Watchlist</a>
    <%= link_to "New list", new_list_path, class: "nav-link" %>
  </div>
</nav>
  <div class="row">
    <div class="banner">
      <h1>THE DEFINITIVE MOVIE LIST</h1>
    </div>
  </div>

  <div class="row">
      <div class="col">
        <ul>
          <% @lists.each do |list| %>
            <li>
              <div class="card m-3">
                <% if list.photo.attached? %>
                  <%= cl_image_tag list.photo.key, height: 188, width: 288, crop: :fill %>
                <% else %>
                    <%= image_tag "image_not_found", style: "height: 188px; width: 288px;"%>
                <% end %>
                <div class="card-img-overlay">
                  <h5 class="card-title"><%= list.name %></h5>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
  </div>
</div>
